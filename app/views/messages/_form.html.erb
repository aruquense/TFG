<%= form_with(model: message) do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :idn %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.text_area :value %>
  </div>

  <div class="field">
    <%= form.hidden_field :viewed %>
  </div>

  <div class="field">
    <%= form.hidden_field :answered %>
  </div>

  <div class="field">
    <%= form.hidden_field :viewed_date %>
  </div>

  <div class="field">
    <%= form.hidden_field :from_physician %>
  </div>

  <div class="field">
    <%= form.label :user, "Lista de Facultativos" %>
    <%= form.select :user, options_from_collection_for_select(User.all, :_id, :email) , {:prompt => 'Selecciona Facultativo'}  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
