
<h1>Messages</h1>

<table>
  <thead>
    <tr>
      <th>Idn</th>
      <th>Value</th>
      <th>Viewed</th>
      <th>Answered</th>
      <th>Viewed date</th>
      <th>From physician</th>
      <th>Physician</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.idn %></td>
        <td><%= message.value %></td>
        <td><%= message.viewed %></td>
        <td><%= message.answered %></td>
        <td><%= message.viewed_date %></td>
        <td><%= message.from_physician %></td>
        <td><%= User.find(message.user).email %></td>
        <td><%= link_to 'Show', message %></td>
        <td><%= link_to 'Edit', edit_message_path(message) %></td>
        <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Message', new_message_path %>

 