<%= render 'partials/aacc'%>
<h2>Histórico de Prescripción Farmacológica del Paciente</h2>

<table class="table table-striped ">
  <thead>
    <tr>
      <th>ENTRADA</th>
      <th>NHC</th>
      <th>CONSULTA</th>
      <th>PRESCRIPCION</th>
      <th>TIPO DE FARMACO</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patient_aacc_prescriptions.each do |patient_aacc_prescription| %>
      <tr>
        <td><%= patient_aacc_prescription.idn %></td>
        <td><%= @paciente.nhc %></td>
        <td><%= @aacc.idn %></td>
        <td><%= patient_aacc_prescription.value %></td>
        <td><%= PrescriptionDrugsType.find( patient_aacc_prescription.prescription_drugs_type_id).description %></td>

        <td><%= link_to 'Show', patient_aacc_prescription %></td>
        <td><%= link_to 'Edit', edit_patient_aacc_prescription_path(patient_aacc_prescription) %></td>
        <td><%= link_to 'Destroy', patient_aacc_prescription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Prescripción Farmacológica del Paciente</h1>

<%= render 'form', patient_aacc_prescription: @patient_aacc_prescription %>

